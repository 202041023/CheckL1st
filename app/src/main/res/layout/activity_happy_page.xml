<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".happy_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv2h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="오늘 하루 행복하셨나요?"
            android:textAlignment="center"
            android:textColor="@color/purple_200"
            android:textSize="30dp"
            android:textStyle="bold"></TextView>

    <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/heartd"
            android:layout_margin="20dp"></ImageView>


        <EditText
            android:id="@+id/et1h"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:hint="오늘 하루 행복을 느낀 점들을 적어보세요."
            android:layout_margin="20dp"></EditText>

        <Button
            android:id="@+id/btn1h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/purple_200"
            android:text="정보 저장하기"
            tools:ignore="TextContrastCheck"></Button>

    </LinearLayout>
</LinearLayout>